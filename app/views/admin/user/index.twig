
{% extends 'admin/layout.twig'%}
{% block title %}Admin{% endblock %}

{% block navigation %}{{ parent() }}{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-9"></div>
        <div class="col-md-3">
            <a href="/admin/register/index" class="btn btn-info">Ajouter un nouvel utilisateur</a>
        </div>
    </div>

            <table class="table">
                <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Email</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}

                    <tr>
                        <th scope="row">1</th>
                        <td> {{ user.firstname }}</td>
                        <td> {{ user.lastname }}</td>
                        <td> {{ user.email }}</td>
                        <td>
                                <a href="/admin/register/edit/{{ user.id }}" class="btn btn-light">Modifier</a>
                                <a href="/admin/register/deleteUserById/{{ user.id }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
{% endblock %}