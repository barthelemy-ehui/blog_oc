{% extends 'admin/layout.twig'%}
{% block title %}Admin{% endblock %}

{% block navigation %}{{ parent() }}{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-10"></div>
        <div class="col-md-2">
            <a href="/admin/posts/add" class="btn btn-info">Ajouter un article</a>
        </div>
    </div>

    <table class="table">
        <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titre</th>
            <th scope="col">Content</th>
            <th scope="col">Status</th>
            <th scope="col">Date de publication</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <th scope="row"> {{ post.id }} </th>
                <td> {{ post.title }} </td>
                <td> {{ post.content }} </td>
                <td> {{ post.status }} </td>
                <td> {{ post.publish_at }} </td>
                <td></td>
                <td>
                    <a class="btn btn-light" href="#{{ post.id }}">Modifier</a>
                    <a class="btn btn-danger" href="#{{ post.id }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}