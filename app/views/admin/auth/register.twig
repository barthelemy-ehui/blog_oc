{% extends 'admin/layout.twig'%}
{% block title %}Connexion{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block navigation %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Enregistrer un nouveau compte</div>
            <div class="card-body">
                <form action="/admin/register/store" method="post">
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="firstname">Prenom</label>
                                <input class="form-control" id="firstname" value="{{ datas?datas['firstname']:'' }}" name="firstname" type="text" aria-describedby="nameHelp" placeholder="PrÃ©nom">
                                <div class="alert-danger">
                                    {{ errors?errors['firstname']:'' }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="lastname">Nom</label>
                                <input class="form-control" id="lastname" value="{{ datas?datas['lastname']:'' }}" name="lastname" type="text" aria-describedby="nameHelp" placeholder="Nom">
                                <div class="alert-danger">
                                    {{ errors?errors['lastname']:'' }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" id="email" value="{{ datas?datas['email']:'' }}" name="email" type="email" aria-describedby="emailHelp" placeholder="Email">
                        <div class="alert-danger">
                            {{ errors?errors['email']:'' }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="password">Mot de passe</label>
                                <input class="form-control" id="password" value="{{ datas?datas['password']:'' }}" name="password" type="password" placeholder="Mot de passe">
                                <div class="alert-danger">
                                    {{ errors?errors['password']:'' }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="passwordConfirm">Confirmer le mot de passe</label>
                                <input class="form-control" id="passwordConfirm" value="{{ datas?datas['passwordConfirm']:'' }}" name="passwordConfirm" type="password" placeholder="Confirmer mot de passe">
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Enregistrer</button>
                </form>
                <!--
                <div class="text-center">
                    <a class="d-block small mt-3" href="login.html">Login Page</a>
                    <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
                </div>
                -->
            </div>
        </div>
{% endblock %}
